mixin banner(opt)
    section.banner
        .banner__heading
            h1.banner__title Оптимизация НДС
            p.banner__subtitle  Работаем по всей России
        .banner__callback.callback
            h2.callback__title= opt.title
            each item in opt.text
                p.callback__text= item
            a.callback__button.button(href='#') Обратная связь
        .banner__contact.contact
            .contact__data.contact__data_email
                a.contact__link(href=`mailto:${opt.email}`)= opt.email
            .contact__data.contact__data_phone
                a.contact__link(href=`tel:${opt.phone}`)= opt.phone