mixin header(opt)
    header.header
        .header__logo.logo
            a.header__link(href='#heading')= opt.logo
        nav.header__navigation
            ul.header__list
                each item in opt.nav
                    li.header__item
                        a.header__link(href=`#${item[1]}` aria-haspopup='true')= item[0]
        .header__menu.header__menu(id='burger') 
