mixin header(opt)
    header.header
        .header__logo.logo
            a.header__link(href='#')= opt.logo
        nav.header__navigation
            ul.header__list
                each item in opt.nav
                    li.header__item
                        a.header__link(href=`#${item[1]}`)= item[0]
        .header__contact.contact
            .contact__email
                a.contact__link(href=`mailto:${opt.email}`)= opt.email
            .contact__phone 
                a.contact__link(href=`tel:${opt.phone}`)= opt.phone